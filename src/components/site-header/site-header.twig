<header class="site-header">
  <a href="https://www.iastate.edu/" class="site-header__logo">
    <img class="site-header__logo-mobile" src="{{ "/img/iowa-state-university-logo-no-tagline-red.svg"|path }}" alt="Carthage College logo">
    <img class="site-header__logo-desktop" src="{{ "/img/iowa-state-university-logo-with-tagline-red.svg"|path }}" alt="Carthage College logo">
  </a>
  <div class="site-header__top">
    <nav class="site-header__utility" aria-label="Utility">
      <ul>
        {% for link in utility_nav %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
    <div class="site-header__search">
      <a href="#site-search" class="site-header__search-toggle" data-micromodal-trigger="site-search">
        <span class="visible-for-screen-readers">Search</span>
        <span class="fak fa-id5-magnifying-glass"></span>
      </a>
    </div>
  </div>
  <div class="site-header__main">
    <a href="#site-header-mega-menu" class="site-header__mega-menu-open" role="button" aria-controls="site-header-mega-menu">
      <div class="site-header__mega-menu-open-line-wrap">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </a>
    <div class="site-header__mega-menu" id="site-header-mega-menu">
      <div class="site-header__mega-menu-inner">
        <div class="site-header__mega-menu-scroller">
          <div>
            <div class="site-header__mega-menu-main">
              <div class="site-header__mega-menu-max-bound">
                <nav class="site-header__mega-menu-main-nav" aria-label="Main">
                  <ul>
                    {% for link in full_nav %}
                      <li>
                        <a href="{{ link.url }}">{{ link.title }}</a>
                        {% if link.children|length %}
                          <ul{% if link.children|length > 5 %} class="two-column-dropdown"{% endif %}>
                            {% for child in link.children %}
                              <li>
                                <a href="{{ child.url }}">{{ child.title }}</a>
                              </li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                </nav>
              </div>
            </div>
            <div class="site-header__mega-menu-secondary">
              <div class="site-header__mega-menu-max-bound">
                <div class="silc-grid silc-grid--collapse">
                  <div class="silc-grid__col silc-grid__col--6">
                    <nav class="site-header__mega-menu-utility" aria-label="Utility">
                      <ul>
                        {% for link in utility_nav %}
                          <li>
                            <a href="{{ link.url }}">{{ link.title }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="site-search modal" id="site-search">
  <div class="modal__overlay" tabindex="-1" data-micromodal-close>
    <a href="#" class="modal__close" role="button">
      <span class="visible-for-screen-readers">Close Search</span>
      <i class="fa-light fa-xmark"></i>
    </a>
    <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="site-search-title">
      <h2 class="visible-for-screen-readers" id="site-search-title">Search</h2>
      <form class="site-search__form" action="/search/" method="GET">
        <div class="site-search__form-inner">
          <label class="visible-for-screen-readers" for="site-search-input">Search</label>
          <input class="site-search__form-input lw_qa lw_qa_page" id="site-search-input" type="text" name="q" placeholder="Search...">
          <button class="site-search__form-submit" type="submit" aria-label="Submit">
            <span class="visible-for-screen-readers">Submit</span>
            <span class="fak fa-id5-magnifying-glass"></span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>