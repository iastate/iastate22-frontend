    <div class="image-grid__image">
      {% include "@card--linked-image" with academics.image_grid.image_one %}
    </div>
    <div class="image-grid__image">
      {% include "@card--linked-image" with academics.image_grid.image_two %}
    </div>
    <div class="image-grid__image">
      {% include "@card--linked-image" with academics.image_grid.image_three %}
    </div>
  </div>
</div>

<div class="home-solutions">
