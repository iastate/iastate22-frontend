<script>
  document.body.classList.add("home");
</script>

<div class="home-hero{% if home_annoucenemt_alert %} home-hero--with-announcement{% endif %}">
  <div class="home-hero__media">
		<img class="home-hero__media-mobile" src="{{ hero.image_mobile|path }}" alt="" />
    <img class="home-hero__media-desktop" src="{{ hero.image_desktop|path }}" alt="" />
	</div>
  <div class="home-hero__animation">
    <svg viewBox="0 0 350 300"><path d=""></path></svg>
  </div>
  <div class="home-hero__content-wrapper">
    <h1 class="home-hero__title">{{ hero.title|raw }}</h1>
    {% include "@button--reverse" with hero.button %}
  </div>
  <button class="home-hero__animation-control">
    <span class="home-hero__animation-control-line"></span>
    <span class="home-hero__animation-control-line"></span>
    <span class="visible-for-screen-readers">Pause Animation</span>
  </button>
</div>

{% if home_annoucenemt_alert %}
  {% include "@home-announcement--alert" with home_annoucenemt_alert %}
{% endif %}

<div class="home-community">
  <div class="home-community__label"><p>{{ community.label }}</p></div>
  <h2 class="home-community__headline">{{ community.headline}}</h2>
  <p class="home-community__body">{{ community.body}}</p>
  <div class="home-community__callout">
    <div class="home-community__callout-content-wrap">
      <h2 class="home-community__callout-headline">{{ community.callout.headline }}</h2>
      <p class="home-community__callout-body">{{ community.callout.body }}</p>
      {% include "@button" with community.callout.button %}
    </div>
    <div class="home-community__callout-media">
      <img src="{{ community.callout.imageOne|path }}" alt="" />
    </div>
    <div class="home-community__callout-media-two">
      <img src="{{ community.callout.imageTwo|path }}" alt="" />
    </div>
    <div class="home-community__callout-statistic">
      <h3 class="home-community__callout-statistic-stat">{{ community.callout.statistic.stat }}</h3>
      <p class="home-community__callout-statistic-description">{{ community.callout.statistic.description }}</p>
    </div>
  </div>
</div>

{# Homepage blockquote is different from standard blockquote component as it contains a video modal #}
<div class="home-iastate22-blockquote iastate22-blockquote{% if home_blockquote.portrait %} iastate22-blockquote--with-image{% else %} iastate22-blockquote--with-no-image{% endif %}">
  <div class="iastate22-blockquote__inner-wrap">
    {% if home_blockquote.portrait %}
    <div class="iastate22-blockquote__portrait" data-micromodal-trigger="{{ home_blockquote.modal.id }}">
      <img src="{{ home_blockquote.portrait|path }}" alt="" />
      <button class="video-embed__button">
        <svg viewBox = "0 0 83 83" preserveAspectRatio="xMidYMid meet" class="video-play-icon" xmlns="http://www.w3.org/2000/svg"><g class="outer-circle" fill="none" fill-rule="evenodd"><g opacity=".377" fill="#FFF" fill-rule="nonzero" transform="translate(1 1)"><circle cx="40" cy="40" r="40"/><path d="M40 0C17.909 0 0 17.909 0 40s17.909 40 40 40 40-17.909 40-40S62.091 0 40 0Zm0 1c21.54 0 39 17.46 39 39S61.54 79 40 79 1 61.54 1 40 18.46 1 40 1Z"/></g><path d="M24 22.818h35V57.93H24z"/><path class="arrow" d="m59.986 39.288-28.433-17.68c-2.073-1.363-3.767-.36-3.767 2.229V58.16c0 2.593 1.694 3.593 3.767 2.229l28.433-17.68c.565-.4.934-1.022 1.014-1.71a2.438 2.438 0 0 0-1.01-1.707l-.004-.004Z" fill="#FFF" fill-rule="nonzero"/></g></svg>
        <span class="visible-for-screen-readers">Play Video</span>
      </button>
    </div>
    {% endif %}
    <div class="iastate22-blockquote__text-wrap">
      <h2 class="iastate22-blockquote__quote">{{ home_blockquote.quote }}</h2>
      {% if home_blockquote.author %}
      <p class="iastate22-blockquote__author">{{ home_blockquote.author }}{% if home_blockquote.author_role %}, {{home_blockquote.author_role}}{% endif %}</p>
      {% endif %}
    </div>
  </div>
  <div class="iastate22-modal" id="{{ home_blockquote.modal.id }}" aria-hidden="false">
    <div class="iastate22-modal__overlay" tabindex="-1" data-micromodal-close>
      <div class="iastate22-modal__container{% if home_blockquote.modal.image %} iastate22-modal__container-with-media{% endif %}" id="{{ home_blockquote.modal.id }}-content" role="dialog" aria-modal="true" aria-labelledby="{{ home_blockquote.modal.id }}-title">
        <button class="iastate22-modal__close" aria-label="Close modal" data-micromodal-close><i class="fa-light fa-xmark"></i></button>
        <div class="iastate22-modal__media">
          {% include "@video-embed" with home_blockquote.modal.video %}
        </div>
      </div>
    </div>
  </div>
</div>
